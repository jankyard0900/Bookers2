<div>

  <p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>

  <h2>New book</h2>
    <%= form_with model: @booka do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
    <% end %>
</div>





<div>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td>
        <%= link_to user_path(book.user) do %>
          <%= image_tag book.user.get_profile_image(80, 80) %>
        <% end %>
        </td>
        <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
        </td>
        <td>
          <%= book.body %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>